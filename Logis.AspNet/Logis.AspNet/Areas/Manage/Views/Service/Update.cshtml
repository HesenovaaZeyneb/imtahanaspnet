@model Service

<div class="container justify-content-center">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" style="color:red"></span>
            </div>
        </div>
        <div class="row">
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" style="color:red"></span>
            </div>
        </div>
        <div class="row">
            <div class="mb-3">
                <label asp-for="ImgFile" class="form-label">ImgFile</label>
                <input asp-for="ImgFile" class="form-control">
                <span asp-validation-for="ImgFile" style="color:red"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>